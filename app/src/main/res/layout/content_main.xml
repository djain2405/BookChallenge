    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/emptylayout"
        android:background="#FFE9D2"

        >

        <TextView
            android:id="@+id/emptytitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:text="@string/empty_title1"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@android:color/holo_purple"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>
        <TextView
            android:id="@+id/emptytitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="@string/empty_title2"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@android:color/holo_purple"
            android:layout_below="@+id/emptytitle1"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>
        <TextView
            android:id="@+id/emptytitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/fab_margin"
            android:text="@string/empty_title3"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/holo_purple"
            android:layout_below="@+id/emptytitle2"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/booklist"

        ></android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>
